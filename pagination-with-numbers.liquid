{% if paginate.pages > 1 %}
    <div class="pagination">
      {% if paginate.previous %}
          <a class="prev" href="{{ paginate.previous.url }}">&laquo;</a>
      {% else %}
          <span class="prev">&laquo;</span>
      {% endif %}

      {% assign count = paginate.pages %}
      {% for part in (1..count) %}
            <li {% if paginate.current_page == part %}class="active"{% endif %}><a href="{{ collection.url }}?page={{ forloop.index }}">{{ forloop.index }}</a></li>
      {% endfor %}

      {% if paginate.next %}
          <a class="next" href="{{ paginate.next.url }}"> &raquo;</a>
      {% else %}
          &raquo;</span>
      {% endif %}
    </div>
{% endif %}
